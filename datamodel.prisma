# This File is to define types to Prisma
# A deploy to prisma is need to apply any change (npm run deploy) in order to generate code in prisma.grapthql 
enum Permission {
  ADMIN
  USER
  ITEMCREATE
  ITEMUPDATE
  ITEMDELETE
  PERMISSIONUPDATE
  ORDERUPDATE
}

type User {
  id: ID! @unique
  name: String!
  email: String! @unique
  password: String!
  resetToken: String
  resetTokenExpiry: Float
  permissions: [Permission]
  confirmed: Boolean! @default(value: false)
  cart: [CartItem!]!
}

type Item {
  id: ID! @unique
  title: String!
  description: String!
  image: String!
  largeImage: String!
  price: Int!
  cost:Int!
  user: User!
}

type CartItem {
  id: ID! @unique
  quantity: Int! @default(value: 1)
  item: Item
  user: User!
}

type OrderItem {
  id: ID! @unique
  title: String!
  description: String!
  image: String!
  largeImage: String!
  price: Int!
  cost:Int!
  quantity: Int! @default(value: 1)
  user: User
}

type Order {
  id: ID! @unique
  tracking: String! @unique
  items: [OrderItem!]!
  total: Int!
  totalCost: Int!
  user: User!
  status: String! @default(value: "Generada")
  clientName: String! 
  clientAccount: String!
  createdAt: DateTime!
  updatedAt: DateTime!
}